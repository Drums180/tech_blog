<div class="columns">
  <div class="column">
    {{!-- Main content --}}
    <h1 class="title is-3">Edit Post</h1>
    <form id="update-form" action="">
      <input type="hidden" id="post-id" value="{{post.id}}" data-post-id="{{post.id}}">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input class="input" type="text" name="title" id="title-input" placeholder="Post title" value="{{post.title}}">
        </div>
      </div>
      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea class="textarea" name="content" id="content-input" placeholder="Post content">{{post.content}}</textarea>
        </div>
      </div>
      <button class="button is-primary" id="submit" type="submit">Update</button>
    </form>
  </div>
</div>

<script src="/public/js/edit.js"></script>
