<div class="columns">
  <div class="column">
    {{!-- Main content --}}
    <h1 class="title is-3">Edit Post</h1>
    <form action="/api/post/{{post.id}}" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input class="input" type="text" name="title" placeholder="Post title" value="{{post.title}}">
        </div>
      </div>
      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea class="textarea" name="content" placeholder="Post content">{{post.content}}</textarea>
        </div>
      </div>
      <button class="button is-primary" type="submit">Update</button>
    </form>
  </div>
</div>
