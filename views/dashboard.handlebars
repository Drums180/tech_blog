<div class="columns">
  <div class="column">
    {{!-- Main content --}}
    <h1 class="title is-3">Create a New Post</h1>
    <form action="/api/post" method="POST">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input class="input" type="text" name="title" placeholder="Post title">
        </div>
      </div>
      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea class="textarea" name="content" placeholder="Post content"></textarea>
        </div>
      </div>
      <button class="button is-primary" type="submit">Submit</button>
    </form>

    {{!-- Display previous posts --}}
    <h2 class="title is-4 mt-6">My Posts</h2>
    {{#each posts}}
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <p>
              <strong>{{title}}</strong>
              <br>
              {{content}}
            </p>
          </div>
          <nav class="level is-mobile">
            <div class="level-left">
              <a class="level-item" href="/api/post/{{id}}/edit">
                <span class="icon is-small"><i class="fas fa-edit"></i></span> Edit
              </a>
              <a class="level-item" href="/api/post/{{id}}/delete" onclick="return confirm('Are you sure you want to delete this post?');">
                <button class="button is-danger delete-post" data-id="{{id}}">Delete</button>
              </a>
            </div>
          </nav>
        </div>
      </article>
    </div>
    {{/each}}
  </div>

  <script src="/public/js/dashboard.js"></script>
</div>
