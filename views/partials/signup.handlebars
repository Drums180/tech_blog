<form class="signup-form">
  <div class="field">
    <label class="label" for="username">Username</label>
    <div class="control">
      <input class="input" type="text" id="username-signup" name="username" placeholder="Enter a username" required>
    </div>
  </div>
  <div class="field">
    <label class="label" for="password">Password</label>
    <div class="control">
      <input class="input" type="password" id="password-signup" name="password" placeholder="Enter a password" required>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-primary" type="submit">Sign Up</button>
    </div>
  </div>
</form>
